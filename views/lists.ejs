<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <div class="box" id="heading">
      <h1><%= title %></h1>
    </div>
    <div class="box">
      <% tango.forEach(function(item) { %>
        <form action="/delete" method="POST">
      <div class="item">
        
        <input name="checkbox" type="checkbox" onchange="this.form.submit()" value=<%= item.id %> />
        <p><%= item.name %></p>
      </div>
      </form>
      <% }) %>
    
      <form class="item" action="/" method="POST">
        <input type="text" name="t" placeholder="New Item" autocomplete="off"/>
        <button type="submit" name="btn" value=<%= title %>>submit</button>
      </form>
    </div>
  </body>
</html>
